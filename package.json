{
  "name": "mskelton.dev",
  "description": "Source code for my personal website.",
  "packageManager": "yarn@3.1.1",
  "scripts": {
    "build:css": "tailwindcss -o ./app/tailwind.css",
    "build": "npm run build:css && remix build",
    "dev:css": "yarn build:css --watch",
    "dev": "concurrently -c 'blue.bold,magenta.bold' -n 'CSS,Remix' 'yarn dev:css' 'remix dev'",
    "postinstall": "remix setup node",
    "start": "remix-serve build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "playwright test",
    "ts": "tsc"
  },
  "dependencies": {
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "autoprefixer": "^10.4.2",
    "clsx": "^1.1.1",
    "esbuild": "^0.14.11",
    "gray-matter": "^4.0.2",
    "mdx-bundler": "^8.0.1",
    "postcss": "^8.4.5",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "^4.3.1",
    "reading-time": "^1.3.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-prism-plus": "^1.3.1",
    "rehype-slug": "^5.0.1",
    "remark-gfm": "^3.0.1",
    "remix": "^1.1.3",
    "slugify": "^1.6.5",
    "tailwindcss": "^3.0.13",
    "unist-util-visit": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/eslint-parser": "^7.16.5",
    "@mskelton/eslint-config": "^7.1.0",
    "@playwright/test": "^1.17.2",
    "@remix-run/dev": "^1.1.3",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "concurrently": "^7.0.0",
    "eslint": "^8.6.0",
    "eslint-plugin-playwright": "^0.7.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-sort": "^2.3.1",
    "expect-axe-playwright": "^1.2.1",
    "lariat": "^1.1.0",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.4",
    "typescript": "^4.5.4"
  }
}
