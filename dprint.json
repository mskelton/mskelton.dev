{
  "lineWidth": 80,
  "typescript": {
    "semiColons": "asi",
    "quoteStyle": "preferDouble",
    "arrowFunction.useParentheses": "force",
    "enumDeclaration.memberSpacing": "blankLine"
  },
  "json": {
    "associations": [
      "**/*.{json,jsonc}",
      ".eslintrc",
      ".prettierrc"
    ],
    "indentWidth": 2
  },
  "markdown": {
    "associations": [
      "**/*.md"
    ],
    "textWrap": "always"
  },
  "excludes": ["**/node_modules", ".next/", "pnpm-lock.yaml"],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.86.2.wasm",
    "https://plugins.dprint.dev/json-0.17.4.wasm",
    "https://plugins.dprint.dev/markdown-0.15.3.wasm"
  ]
}
